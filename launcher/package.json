{
  "name": "antic-browser-launcher",
  "version": "2.0.1",
  "description": "Auto-updater and dependency manager for Antic Browser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "CJ-aezakmi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CJ-aezakmi/UKULUT.git"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.anticbrowser.launcher",
    "productName": "Antic Browser",
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico",
      "artifactName": "Antic.Browser_${version}_x64-setup.${ext}",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ]
  }
}
